<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45dp"
        android:background="@color/colorPrimary"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageViewBackArrow"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_35dp"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView_custom_view"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_45dp"
            android:layout_weight="0.15"
            android:visibility="invisible"
            app:srcCompat="@drawable/back" />

    </LinearLayout>



    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView_custom_view"
        android:background="#F2F2F2" />

    <ListView
        android:id="@+id/listView_cate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_weight="1"
        android:scrollbars="none"
        tools:ignore="InefficientWeight" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@color/colorPrimary"
        android:text="Cancel"
        android:textColor="#ffffff" />

</LinearLayout>