<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimens_45dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimens_45dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="@string/text_images"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"
                                android:textStyle="bold"/>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimens_45dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/dimens_10dp"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimens_45dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="@string/text_total"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"/>

                            <TextView
                                android:id="@+id/textView_images_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="00"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylerview_my_work_images"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/textView_Images_empty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_120dp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimens_10dp"
                        android:text="No Images Found"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimens_45dp"
                    android:layout_gravity="right|center_vertical">


                    <Button
                        android:id="@+id/button_more_images"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimens_45dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/text_size_16sp"
                        android:paddingLeft="@dimen/dimens_10dp"
                        android:paddingRight="@dimen/dimens_10dp"
                        android:visibility="gone"
                        android:background="@null"
                        android:textColor="@color/yellow"
                        android:text="Add"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_2dp"
                    android:layout_margin="@dimen/dimens_10dp"
                    android:background="@color/yellow"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimens_45dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimens_45dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="@string/text_videos"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"
                                android:textStyle="bold"/>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimens_45dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/dimens_10dp"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimens_45dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="@string/text_total"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"/>

                            <TextView
                                android:id="@+id/textView_videos_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimens_10dp"
                                android:text="00"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_size_18sp"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylerview_my_work_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textView_Videos_empty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_120dp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimens_10dp"
                        android:text="No Videos Found"
                        android:visibility="gone"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical">

                    <Button
                        android:id="@+id/button_more_videos"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimens_45dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/text_size_16sp"
                        android:paddingLeft="@dimen/dimens_10dp"
                        android:paddingRight="@dimen/dimens_10dp"
                        android:visibility="gone"
                        android:background="@null"
                        android:textColor="@color/yellow"
                        android:text="Add"/>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>