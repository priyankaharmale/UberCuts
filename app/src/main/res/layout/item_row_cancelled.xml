<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_services_home"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/dimens_10dp"
        android:text="Reschedule Task"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/text_date"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_posted_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens_10dp"
                android:text="05 Jan 2018"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_date"
                    android:layout_width="@dimen/dimens_35dp"
                    android:layout_height="@dimen/dimens_35dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/date_post_your_task" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_10dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/text_time"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_posted_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens_10dp"
                android:text="10:10 AM"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_time"
                    android:layout_width="@dimen/dimens_35dp"
                    android:layout_height="@dimen/dimens_35dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/time_post_your_task" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel_add_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/bg_button_blue_home"
            android:text="@string/hint_cancel"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <Button
            android:id="@+id/btn_post_add_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/bg_button_blue_home"
            android:text="Confirm"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>