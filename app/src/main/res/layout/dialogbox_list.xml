<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45dp"
        android:background="@color/colorPrimary"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageViewBackArrow"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_35dp"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_custom_view"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView_custom_view"
        android:background="#F2F2F2" />

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Search"

        android:visibility="gone" />

    <EditText
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_10dp"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/dimens_10dp"
        android:hint="Search"

        android:iconifiedByDefault="false"
        android:queryHint="Search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="visible"
        tools:ignore="InefficientWeight" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:background="@color/colorPrimary"
        android:text="Cancel"
        android:textColor="#ffffff" />

</LinearLayout>