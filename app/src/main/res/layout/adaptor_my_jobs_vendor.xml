<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_120dp"
    android:layout_margin="@dimen/dimens_5dp"
    android:background="@drawable/bg_my_tasks"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:text="Manicure"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_18dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_vendorimage"
        android:layout_width="@dimen/dimens_60dp"
        android:layout_height="@dimen/dimens_60dp"
        android:layout_below="@+id/tv_offer"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/text_20"
        android:src="@drawable/judy_ward_beautician_details" />

    <TextView
        android:id="@+id/tv_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_50dp"
        android:layout_toRightOf="@+id/iv_vendorimage"
        android:text="Judy Ward"

        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_18dp" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customerName"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_toRightOf="@+id/iv_vendorimage"
        android:drawableLeft="@drawable/date_post_your_task"
        android:drawablePadding="@dimen/dimens_10dp"
        android:text="05 Jan 2018"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_16dp" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customerName"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_toRightOf="@+id/tv_date"
        android:drawablePadding="@dimen/dimens_10dp"
        android:text="Customer Place"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_16dp" />
</RelativeLayout>